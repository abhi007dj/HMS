
@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">



    <div class="row">
        <div class="col-lg-12">

            <h2>AccomodationType</h2>

        </div>


    </div>


    <hr />
    <div class="row mb-3">
        <div class="col-lg-12">
            <form>
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" required>
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fa fa-search mr-1" aria-hidden="true"></i>Search
                        </button>
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fa fa-repeat mr-1" aria-hidden="true"></i>Reset
                        </button>
                        <button data-href="@Url.Action("Action", "AccomodationTypes")" class="btn btn-outline-success databtn" type="button" data-toggle="modal" data-target="#actionmodal" data-whatever="">
                            <i class="fa fa-plus mr-1" aria-hidden="true"></i>
                            Create
                        </button>
                    </div>
                </div>
            </form>
        </div>


    </div>

    
    <div class="row mb-2">
        <div class="col-lg-12">

            @{Html.RenderAction("Listing");}
        </div>


    </div>

    <div class="modal fade" id="actionmodal" tabindex="-1" role="dialog" aria-labelledby="actionmodalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        </div>
    </div>

</div>
<script>
    $('.databtn').click(function () {

        $.ajax({

            url: $(this).attr('data-href'),
        })
            .done(function (response) {
                $('#actionmodal .modal-dialog').html(response);

            });
   
});
</script>

